
<header class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-around fixed-top">
    <h1 class="navbar-brand">Dashboard</h1>

    <div class="d-flex" >
        <p class="h5 text-muted">{{user.displayName}}</p>
    </div>

    <div class="d-flex">
       
        <a class="btn btn-secondary" href="/logout">Log out</a>
    </div>
    
</header>

{{messages}}

<form action="/note" method="POST" id="note-form">
<textarea name="text" id="note-input" placeholder="Write your note..."></textarea>
<button id="newbtn" type="submit">Save</button>
</form>


<div class="note-card-container">
    {{#if notes}}

        {{#each notes}}
        <div class="note-card">
            
            {{!-- <h1 class="card-notes">{{title}}</h1> --}}
                
            <span class="text-muted card-hour">{{formatDate createdAt 'MMMM Do YYYY, h:mm a'}}</span> <br>
            <div class="card-notes">{{{sanitizedHtml}}}</div>
            <hr>
            <div class="ftbtn-container">
                <a class="ftbtn" href="/edit/{{_id}}">Edit</a>
                <form action="dashboard/delete/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="ftbtn danger">Delete</button>
                </form>
            </div>
        </div>
        {{/each}}

    {{else}}
        <p class="h4 text-center text-muted mt-5 pt-5">It seems that you do not have any notes yet...</p>
    {{/if}}
</div>
