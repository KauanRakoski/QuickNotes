
<header class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-around fixed-top">
    <h1 class="navbar-brand">Dashboard</h1>

    <div class="d-flex" >
        <p class="h5 text-muted">{{user.displayName}}</p>
    </div>

    <div class="d-flex">
        <a class="btn btn-primary mr-2" href="/new">New Note</a>
        <a class="btn btn-secondary" href="/logout">Log out</a>
    </div>

    
    
</header>

<div class="d-flex flex-column-reverse mt-5 pt-3">
    {{#if notes}}

        {{#each notes}}
        <div class="container border mt-4 p-3 rounded">
            
                <h1 class="h2 mb-2">{{title}}</h1>
                
            <span class="text-muted mb-2">{{formatDate createdAt 'MMMM Do YYYY, h:mm a'}}</span>
            <p class="mt-2 mb-3 h5">{{text}}</p>

            <div class="d-flex">
                <a class="btn btn-primary mr-2 pr-3 pl-3" href="/edit/{{_id}}">Edit</a>
                <form action="dashboard/delete/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
        {{/each}}

    {{else}}
        <p class="h4 text-center text-muted mt-5 pt-5">It seems that you do not have any notes yet...</p>
    {{/if}}
</div>


